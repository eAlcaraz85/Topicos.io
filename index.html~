<div id="outline-container-orgc28eddc" class="outline-4">
<h4 id="orgc28eddc">6. Grafos (Graphs)</h4>
<div class="outline-text-4" id="text-orgc28eddc">
</div>
<ul class="org-ul">
<li><a id="org0d5b4b0"></a>Python<br />
<div class="outline-text-5" id="text-org0d5b4b0">
<div class="org-src-container">
<pre class="src src-python"><span style="color: #c099ff;">class</span> <span style="color: #ffc777;">Grafo</span>:
<span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">def</span> <span style="color: #82aaff;">__init__</span><span style="color: #c099ff;">(</span><span style="color: #c099ff;">self</span><span style="color: #c099ff;">)</span>:
<span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">self</span>.vertices = <span style="color: #c099ff;">{}</span>

<span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">def</span> <span style="color: #82aaff;">agregar_vertice</span><span style="color: #c099ff;">(</span><span style="color: #c099ff;">self</span>, v<span style="color: #c099ff;">)</span>:
<span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">if</span> v <span style="color: #c099ff;">not</span> <span style="color: #c099ff;">in</span> <span style="color: #c099ff;">self</span>.<span style="color: #ff98a4;">vertices</span>:
<span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">self</span>.vertices<span style="color: #c099ff;">[</span><span style="color: #ff98a4;">v</span><span style="color: #c099ff;">]</span> = <span style="color: #c099ff;">[]</span>

<span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">def</span> <span style="color: #82aaff;">agregar_arista</span><span style="color: #c099ff;">(</span><span style="color: #c099ff;">self</span>, v1, v2<span style="color: #c099ff;">)</span>:
<span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">if</span> v1 <span style="color: #c099ff;">in</span> <span style="color: #c099ff;">self</span>.vertices <span style="color: #c099ff;">and</span> v2 <span style="color: #c099ff;">in</span> <span style="color: #c099ff;">self</span>.<span style="color: #ff98a4;">vertices</span>:
<span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">self</span>.vertices<span style="color: #c099ff;">[</span>v1<span style="color: #c099ff;">]</span>.append<span style="color: #c099ff;">(</span>v2<span style="color: #c099ff;">)</span>
<span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="background-color: #2f334d;"> </span>   <span style="color: #c099ff;">self</span>.vertices<span style="color: #c099ff;">[</span>v2<span style="color: #c099ff;">]</span>.append<span style="color: #c099ff;">(</span>v1<span style="color: #c099ff;">)</span>

grafo = Grafo<span style="color: #c099ff;">()</span>
grafo.agregar_vertice<span style="color: #c099ff;">(</span>1<span style="color: #c099ff;">)</span>
grafo.agregar_vertice<span style="color: #c099ff;">(</span>2<span style="color: #c099ff;">)</span>
grafo.agregar_arista<span style="color: #c099ff;">(</span>1, 2<span style="color: #c099ff;">)</span>
</pre>
</div>
</div>
