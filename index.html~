<div class="outline-text-4" id="text-orgff03517">
<div class="org-src-container">
<pre class="src src-html">   &lt;<span style="color: #c099ff;">!DOCTYPE</span> html&gt;
   &lt;<span style="color: #82aaff;">html</span>&gt;
   &lt;<span style="color: #82aaff;">head</span>&gt;
       &lt;<span style="color: #82aaff;">title</span>&gt;<span style="font-weight: bold; text-decoration: underline;">Modificar Persona</span>&lt;/<span style="color: #82aaff;">title</span>&gt;
   &lt;/<span style="color: #82aaff;">head</span>&gt;
   &lt;<span style="color: #82aaff;">body</span>&gt;
       &lt;<span style="color: #82aaff;">h1</span>&gt;<span style="font-weight: bold; text-decoration: underline;">Modificar Persona</span>&lt;/<span style="color: #82aaff;">h1</span>&gt;
       &lt;<span style="color: #82aaff;">form</span> <span style="color: #ff98a4;">method</span>=<span style="color: #c3e88d;">"POST"</span>&gt;
           {% csrf_token %}
           &lt;<span style="color: #82aaff;">label</span>&gt;Nombre:&lt;/<span style="color: #82aaff;">label</span>&gt;
           &lt;<span style="color: #82aaff;">input</span> <span style="color: #ff98a4;">type</span>=<span style="color: #c3e88d;">"text"</span> <span style="color: #ff98a4;">name</span>=<span style="color: #c3e88d;">"nombre"</span> <span style="color: #ff98a4;">value</span>=<span style="color: #c3e88d;">"{{ persona.nombre }}"</span>&gt;
           &lt;<span style="color: #82aaff;">label</span>&gt;Edad:&lt;/<span style="color: #82aaff;">label</span>&gt;
           &lt;<span style="color: #82aaff;">input</span> <span style="color: #ff98a4;">type</span>=<span style="color: #c3e88d;">"number"</span> <span style="color: #ff98a4;">name</span>=<span style="color: #c3e88d;">"edad"</span> <span style="color: #ff98a4;">value</span>=<span style="color: #c3e88d;">"{{ persona.edad }}"</span>&gt;
           &lt;<span style="color: #82aaff;">button</span> <span style="color: #ff98a4;">type</span>=<span style="color: #c3e88d;">"submit"</span>&gt;Modificar&lt;/<span style="color: #82aaff;">button</span>&gt;
       &lt;/<span style="color: #82aaff;">form</span>&gt;
   &lt;/<span style="color: #82aaff;">body</span>&gt;
   &lt;/<span style="color: #82aaff;">html</span>&gt;
